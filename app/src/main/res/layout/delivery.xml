<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/deliveryImageButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
            />

        <TextView
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="주문하기"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="35dp"
            android:layout_marginLeft="80dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/resist_Id"
            android:layout_width="400dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:hint="주문자 정보를 입력해주세요" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <EditText
            android:layout_width="400dp"
            android:layout_height="47dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="주문 요청사항을 입력해주세요" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="405dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="결제:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/write_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:hint="결제수단 입력"
            android:padding="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="배달 주문 내역"
            android:textColor="@color/black"
            android:textSize="20dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="200dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="16dp"
            android:text="신선 마켓 채소 X2\n재료 : 사과\n크기 : 대\n수정\n가격 : 5,000원"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:background="@drawable/rou"
            android:id="@+id/login_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            android:text="결제하기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />


    </LinearLayout>






</LinearLayout>