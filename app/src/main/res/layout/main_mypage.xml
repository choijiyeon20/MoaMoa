<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Main_mypage">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="64dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginStart="170dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/big"  />

        <ImageView
            android:layout_marginTop="1dp"
            android:layout_width="64dp"
            android:layout_height="62dp"
            android:layout_marginStart="110dp"
            app:srcCompat="@drawable/ic_baseline_notifications_active_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="110dp"
            android:padding="16dp"
            android:text="Recipe MoA MoA"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_marginStart="-145dp"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="13dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="myPage"
            android:textColor="@color/yellow"
            android:textSize="30dp"
            android:textAlignment="center"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="425dp"
        android:layout_height="124dp"
        android:layout_marginTop="83dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        android:background="@color/grey">

        <ImageView
            android:gravity="center"
            android:layout_width="97dp"
            android:layout_height="62dp"
            android:layout_marginStart="165dp"
            android:background="@color/grey"
            app:srcCompat="@drawable/ic_baseline_how_to_reg_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="홍길동 \n abcd1234@naver.com"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ㅇㄹㅇㅎㅀ"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:id="@+id/mypage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/ic_baseline_group_24"
                android:layout_marginStart="20dp"/>
            <ImageButton
                android:id="@+id/orderlist"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/ic_baseline_create_24"
                android:layout_marginStart="20dp"/>
            <ImageButton
                android:id="@+id/change"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/ic_baseline_monetization_on_24"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="정보"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="28.11dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:text="주문내역"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="18dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="비밀번호 변경"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="7pt"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="20dp" >

            <ImageButton
                android:id="@+id/basket"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/ic_baseline_menu_book_24"
                android:layout_marginStart="40dp"/>

            <ImageButton
                android:id="@+id/delivery"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/ic_baseline_message_24" />
            <ImageButton
                android:id="@+id/out"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="18dp"
                app:srcCompat="@drawable/ic_baseline_settings_suggest_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="1dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="장바구니"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="11.11dp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:text="배달 주문하기"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="탈퇴하기"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
